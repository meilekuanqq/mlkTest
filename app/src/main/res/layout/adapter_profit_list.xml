<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mlk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_profit_icon_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_prfit_name_tv"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="火影忍者"
            android:textSize="@dimen/title_item_title_text_size" />

        <RatingBar
            android:id="@+id/profit_ratingbar"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:isIndicator="true"
            android:max="10"
            android:numStars="5"
            android:stepSize="0.5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_profit_down_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/title_list_item_content" />

            <TextView
                android:id="@+id/adapter_profit_mb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:textSize="@dimen/title_list_item_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/profit_down_ubi"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:drawablePadding="-5dp"
        android:drawableTop="@drawable/selector_profit_down"
        android:gravity="center"
        android:text="@string/profit_down_ubi"
        android:textColor="@color/colorAccent" />

</LinearLayout>