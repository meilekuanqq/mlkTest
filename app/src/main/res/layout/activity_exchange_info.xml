<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exchange_image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:background="@color/gray_update"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exchange_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:text="你的我的他的嘿嘿嘿嘿嘿嘿"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exchange_info_remain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="剩余数量:4"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_info_huan_tv"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/selector_exchange_btn"
        android:clickable="true"
        android:gravity="center"
        android:text="立即兑换"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>