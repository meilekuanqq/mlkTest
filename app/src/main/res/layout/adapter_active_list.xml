<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mlk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_active_header_iv"
        android:layout_width="80dp"
        android:layout_margin="10dp"
        android:layout_height="80dp"
        />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="80dp">
        <TextView
            android:layout_marginTop="2dp"
            android:text="获奖名单"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/title_item_title_text_size"
            android:id="@+id/adapter_active_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="获奖名单获奖名单获奖名单"
            android:textSize="@dimen/title_list_item_content"
            android:id="@+id/adapter_active_shortname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="66人参加"
                android:id="@+id/adapter_active_join"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/shape_over_bg"
                android:text="已结束"
                android:textColor="@color/gary_white"
                android:id="@+id/active_over"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_next" />
    </LinearLayout>
   
   
</LinearLayout>